<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<% if content_for(:meta_tags) %>
  <%= yield(:meta_tags) %>
<% else %>
  <!-- opengraph -->
  <meta property="og:locale" content="en_GB" />
  <meta property="og:site_name" content="Dean Tresadern" />
  <meta property="og:title" content="Dean Tresadern" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= CANONICAL_URL %>" />
  <meta property="og:image" content="<%= URI.join(CANONICAL_URL, 'assets/images/meta/opengraph-image-src.jpg').to_s  %>" />
  <meta property="og:description" content="I make things." />

  <!-- twit card -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@DeanTresadern" />
  <meta name="twitter:title" content="Dean Tresadern" />
  <meta name="twitter:description" content="I make things." />
  <meta name="twitter:creator" content="@DeanTresadern" />
  <meta name="twitter:image:src" content="<%= URI.join(CANONICAL_URL, 'assets/images/meta/twitter-image-src.jpg').to_s  %>" />
<% end %>
<link rel="canonical" href="<%= CANONICAL_URL %>" />
<link rel="alternate" hreflang="en" href="<%= CANONICAL_URL %>">

<%= csrf_meta_tags %>
<%= csp_meta_tag %>